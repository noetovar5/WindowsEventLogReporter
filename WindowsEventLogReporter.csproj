<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>


<!-- === Branding & Version Info === -->
<Company>Noe Tovar – MBA 2025</Company>
<Product>Error Log Application</Product>
<Description>Search and Serve Application or Windows Logs.</Description>
<Copyright>© 2025 Noe Tovar. All Rights Reserved.</Copyright>
<AssemblyVersion>1.0.0.0</AssemblyVersion>
<FileVersion>1.0.0.0</FileVersion>
<Version>1.0.0</Version>

    <!-- Make the EXE self-contained and single-file -->
    <SelfContained>true</SelfContained>
    <PublishSingleFile>true</PublishSingleFile>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>

    <!-- Set the EXE icon -->
    <ApplicationIcon>log.ico</ApplicationIcon>
  </PropertyGroup>

  <!-- Embed the icon inside the executable as a managed resource -->
  <ItemGroup>
    <EmbeddedResource Include="log.ico" />
  </ItemGroup>

</Project>
